# BACKUP

On master node run
$ CREATE USER replicator WITH REPLICATION ENCRYPTED PASSWORD 'my_replicator_password';
$ SELECT * FROM pg_create_physical_replication_slot('replication_slot_slave_crosscheck');
# Check
$ SELECT * FROM pg_replication_slots;

pg_basebackup -D /tmp/postgresslave -S replication_slot_slave_crosscheck -X stream -P -U replicator -Fp -R

Copy /tmp/postgresslave diroctory from master to slave
Add into postgresql.auto.conf
primary_conninfo = 'host=127.0.0.1 port=5432 user=replicator password=my_replicator_password'
restore_command = 'cp /var/lib/postgresql/data/pg_wal/%f "%p"'
